<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr class="h5">
      <th>Name</th>
      <th>Email</th>
      <th>Occupation</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.FirstName + ' ' + user.LastName, user, style: 'color: #2e6da4' %></td>
        <td><%= user.email %></td>
        <td><%= user.Occupation %></td>
        <td class="text-center"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


