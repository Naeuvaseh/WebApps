<div class="row">
  <div class="col-md-12">
    <h1><%= @user.FirstName %> <%= @user.LastName %> <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary pull-right' %></h1>
  </div>
</div>

<div class="row">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h2>Accounts <%= link_to 'New Account', new_account_path(@user), class:'btn btn-success pull-right' %></h2>
    </div>

    <div class="panel-body">
      <div class="row text-center">
        <% @user.accounts.each do |account| %>
            <div class="col-md-3 hero-features">
              <div class="thumbnail">
                <% if account.Category == 'American Express' %>
                    <%= image_tag('Amex.png', :height => 500, :width => 800) %>
                    <div class="row">
                      <div class="col-xs-12">
                        <hr style="margin: 5px">
                        <div class="h3" style="margin-top: 5px"><%= account.Name %></div>
                        <div class="h6">Account: <%= account.Number %></div>
                      </div>
                    </div>
                    <span>
                      <div class="panel-footer">
                        <span class="pull-left"><%= link_to 'View Details', account_path(account.id) %></span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                      </div>
                    </span>
                <% elsif account.Category == 'Mastercard' %>
                    <%= image_tag('mastercard.png', :height => 500, :width => 800) %>
                    <div class="row">
                      <div class="col-xs-12">
                        <hr style="margin: 5px">
                        <div class="h3" style="margin-top: 5px"><%= account.Name %></div>
                        <div class="h6">Account: <%= account.Number %></div>
                      </div>
                    </div>
                    <span>
                      <div class="panel-footer">
                        <span class="pull-left"><%= link_to 'View Details', account_path(account.id) %></span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                      </div>
                    </span>
                <% elsif account.Category == 'Visa' %>
                    <%= image_tag('visa.png', :height => 500, :width => 800) %>
                    <div class="row">
                      <div class="col-xs-12">
                        <hr style="margin: 5px">
                        <div class="h3" style="margin-top: 5px"><%= account.Name %></div>
                        <div class="h6">Account: <%= account.Number %></div>
                      </div>
                    </div>
                   <span>
                      <div class="panel-footer">
                        <span class="pull-left"><%= link_to 'View Details', account_path(account.id) %></span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                      </div>
                    </span>
                <% elsif account.Category == 'Google Wallet' %>
                    <%= image_tag('googlewallet.png', :height => 500, :width => 800) %>
                    <div class="row">
                      <div class="col-xs-12">
                        <hr style="margin: 5px">
                        <div class="h3" style="margin-top: 5px"><%= account.Name %></div>
                        <div class="h6">Account: <%= account.Number %></div>
                      </div>
                    </div>
                    <span>
                      <div class="panel-footer">
                        <span class="pull-left"><%= link_to 'View Details', account_path(account.id) %></span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                      </div>
                    </span>
                <% elsif account.Category == 'Discover' %>
                    <%= image_tag('Discover-Logo.png', :height => 500, :width => 800) %>
                    <div class="row">
                      <div class="col-xs-12">
                        <hr style="margin: 5px">
                        <div class="h3" style="margin-top: 5px"><%= account.Name %></div>
                        <div class="h6">Account: <%= account.Number %></div>
                      </div>
                    </div>
                    <span>
                      <div class="panel-footer">
                        <span class="pull-left"><%= link_to 'View Details', account_path(account.id) %></span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                      </div>
                    </span>
                <% elsif account.Category == 'PayPal' %>
                    <%= image_tag('paypal.png', :height => 500, :width => 800) %>
                    <div class="row">
                      <div class="col-xs-12">
                        <hr style="margin: 5px">
                        <div class="h3" style="margin-top: 5px"><%= account.Name %></div>
                        <div class="h6">Account: <%= account.Number %></div>
                      </div>
                    </div>
                    <span>
                      <div class="panel-footer">
                        <span class="pull-left"><%= link_to 'View Details', account_path(account.id) %></span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                      </div>
                    </span>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
