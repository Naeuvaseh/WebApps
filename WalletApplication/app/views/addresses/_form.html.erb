<%= form_for(@address) do |f| %>
  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="col-md-6">

      <div class="row">
        <div class="field">
          <%= f.label :AddressLine1, 'Address Line 1', class: 'h4' %><br>
          <%= f.text_field :AddressLine1, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="field">
          <%= f.label :AddressLine2, 'Address Line 2', class: 'h4' %><br>
          <%= f.text_field :AddressLine2, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="field">
            <%= f.label :City, class: 'h4' %><br>
            <%= f.text_field :City, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="field">
            <%= f.label :State, class: 'h4' %><br>
            <%= f.select(:State,
                         ['AL', 'AK', 'AZ', 'AR', 'CA', 'CO', 'CT', 'DE', 'FL', 'GA', 'HI', 'ID', 'IL',
                          'IN', 'IA', 'KS', 'KY', 'LA', 'ME', 'MD', 'MA', 'MI', 'MN', 'MS', 'MO', 'MT', 'NE',
                          'NV', 'NH', 'NJ', 'NM', 'NY', 'NC', 'ND', 'OH', 'OK', 'OR', 'PA', 'RI', 'SC', 'SD', 'TN', 'TX',
                          'UT', 'VT', 'VA', 'WA', 'WV', 'WI', 'WY'], {}, {:class => 'form-control'}) %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="field">
            <%= f.label :ZIP, class: 'h4' %><br>
            <%= f.text_field :ZIP, class: "form-control", maxlength: '5' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="field">
          <%= f.label :County, class: 'h4' %><br>
          <%= f.text_field :County, class: "form-control" %>
        </div>
      </div>

    </div>
    <div class="col-md-6">
      <div class="field">
        <%= f.label :FamilyID, 'FamilyID:', class: 'h4' %><br>
        <%= f.text_field :FamilyID, class: 'form-control' %>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="actions">
          <%= f.submit 'Create Address', class: 'btn btn-primary pull-right' %>
        </div>
      </div>
    </div>
<% end %>
